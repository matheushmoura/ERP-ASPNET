@model BancoArmarinho.Models.ContaPagarModel /* tipagem, definindo com o tipo do cadastro */
@{
    ViewData["Title"] = "Adicionar Conta";

    <h3 class="alert-success">@ViewData["Menssagem"]</h3>
    <h1>Adicionar Conta</h1>

    <div class="container-fluid">
        <form asp-controller="ContaPagar" asp-action="Adiciona" method="post">

            <div class="form-group">
                <input type="hidden" asp-for="Codigo" class="form-control" />
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Descricao"></label>
                    <input type="text" maxlength="50" asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao" class="alert-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Valor"></label>
                    <input id="txtValor" maxlength="10" type="text" asp-for="Valor" class="form-control" />
                    <span asp-validation-for="Valor" class="alert-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Data"></label>
                    <input id="txtData" type="text" maxlength="15" asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" mask="##/##/####" class="alert-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>

        </form>
        @Html.ActionLink("Voltar", "Index", "ContaPagar", new { }, new { @class = "btn btn-primary" })
    </div>

    @section Scripts    {
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="http://digitalbush.com/wpcontent/uploads/2014/10/jquery.maskedinput.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.0/jquery.mask.js"></script>
        <script src="~/lib/jquery/dist/jquery.maskMoney.min.js" type="text/javascript"></script>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <script>

            $(function () {
                $('#txtValor').maskMoney({ showSymbol: true, symbol: "R$", decimal: ",", thousands: "." });
                $("#txtData").mask('00/00/0000', { reverse: false });

            });
        </script>
    }}