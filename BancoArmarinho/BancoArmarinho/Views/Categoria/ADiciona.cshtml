@model BancoArmarinho.Models.CategoriaModel /* tipagem, definindo com o tipo do cadastro */
@{
    ViewData["Title"] = "Cadastro Categoria";
}



<div class="container-fluid">

    <h3 id="txtmsg" class="alert-success">@ViewData["Menssagem"]</h3>
    <h3>Cadastro Categoria </h3>

    <form asp-controller="Categoria" asp-action="Adiciona" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Codigo" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Nome"></label>
            <input type="text" id="Nome" asp-for="Nome" maxlength="50" class="form-control" required="required" />
            <span asp-validation-for="Nome" class="alert-danger"></span>
        </div>
        <div class="form-group">

            @Html.ActionLink("Voltar", "Index", "Categoria", new { }, new { @class = "btn btn-secondary" })
            <button type="submit" onclick="limpar()" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</div>


