@model BancoArmarinho.Models.UsuarioModel /* tipagem, definindo com o tipo do cadastro */
@{
    ViewData["Title"] = "Cadastro Usuario";
}




<div class="container-fluid">

    <h3 class="alert-success">@ViewData["Menssagem"]</h3>
    <h3>Cadastro Usuário</h3>
    <form asp-controller="Usuario" asp-action="Adiciona" method="post">

        <div class="form-group">
            <input type="hidden" asp-for="Codigo" class="form-control" />
        </div>

        <div class="form-group">
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Usuario1"></label>
                    <input type="text" asp-for="Usuario1" maxlength="20" class="form-control" required="required" />
                    <span asp-validation-for="Usuario1" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label asp-for="Senha"></label>
                    <input type="password" asp-for="Senha" maxlength="50" class="form-control" required="required" />
                    <span asp-validation-for="Senha" class="alert-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label>Permissão:  </label> <br />
                    <select class="form-control" asp-for="Permissao">
                        <option value="1">Administrador</option>
                        <option value="2">Vendedor</option>
                        <option value="3">Financeiro</option>
                    </select>
                    <span asp-validation-for="Permissao" class="alert-danger"></span>
                </div>
            </div>

        </div>

        <div class="form-group">

            @Html.ActionLink("Voltar", "Index", "Usuario", new { }, new { @class = "btn btn-secondary" })
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>

    </form>
</div>